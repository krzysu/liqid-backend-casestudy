generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./../database.sqlite3"
}

// Base Product model
model Product {
  id             String       @id @unique
  type           ProductType
  profit         Float
  currentAmount  Float
  investedAmount Float
  allocations    Allocation[]
}

// Allocation model
model Allocation {
  id            String  @id
  productId     String  
  assetClass    String
  region        String
  securityIsin  String
  securityCount Int
  product       Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

enum ProductType {
  WEALTH
  PRIVATE_EQUITY
}
